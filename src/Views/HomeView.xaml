				<DataGridTextColumn x:Name="KillPerRoundColumn" Width="Auto" Header="KPR/DPR" HeaderStyle="{StaticResource KprDprHeader}" ElementStyle="{StaticResource KillPerRoundDataGridTextColumnStyle}"
									Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowAverageDamageColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
				<DataGridTextColumn x:Name="AssistPerRoundColumn" Width="Auto" Header="APR" HeaderStyle="{StaticResource AssistPerRoundHeader}" ElementStyle="{StaticResource AssistPerRoundDataGridTextColumnStyle}"
									Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowAssistPerRoundColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
				<DataGridTextColumn x:Name="TotalDamageHealthColumn" Width="Auto" Header="TDH" HeaderStyle="{StaticResource TotalDamageHealthHeader}" ElementStyle="{StaticResource TotalDamageHealthCountDataGridTextColumnStyle}"
									Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowTotalDamageHealthColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
				<DataGridTextColumn x:Name="TotalDamageArmorColumn" Width="Auto" Header="TDA" HeaderStyle="{StaticResource TotalDamageArmorHeader}" ElementStyle="{StaticResource TotalDamageArmorCountDataGridTextColumnStyle}"
									Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowTotalDamageArmorColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
				<DataGridTextColumn x:Name="ClutchCountColumn" Width="Auto" Header="Clutchs" ElementStyle="{StaticResource ClutchCountDataGridTextColumnStyle}" HeaderStyle="{StaticResource ClutchCountHeader}"
									Visibility="{Binding Source={StaticResource Locator}, Path=Settings.ShowClutchCountColumn, Converter={StaticResource BooleanToVisibilityConverter}}" />
				<DataGridTextColumn x:Name="BombDefusedColumn" Width="Auto" Header="BD" HeaderStyle="{StaticResource BombDefusedHeader}" ElementStyle="{StaticResource BombDefusedCountDataGridTextColumnStyle}"
