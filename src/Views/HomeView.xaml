				<DataGridTextColumn x:Name="BombPlantedColumn" Width="Auto" Header="BP" HeaderStyle="{StaticResource BombPlantedHeader}" ElementStyle="{StaticResource BombPlantedCountDataGridTextColumnStyle}"
